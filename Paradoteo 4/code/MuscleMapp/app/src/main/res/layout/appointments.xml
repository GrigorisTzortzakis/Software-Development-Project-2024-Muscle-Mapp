<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#0D0D0D"
		android:orientation="vertical">

		<!-- Header Layout -->
		<LinearLayout
			android:id="@+id/linear41"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="30dp"
			android:layout_marginTop="40dp"
			android:background="#0D0D0D"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<androidx.cardview.widget.CardView
				android:id="@+id/linear98"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				app:cardElevation="2dp"
				app:cardCornerRadius="40dp"
				app:cardBackgroundColor="#1C1C1C">
				<ImageView
					android:id="@+id/imageview45"
					android:layout_width="15dp"
					android:layout_height="25dp"
					android:padding="4dp"
					android:foregroundGravity="center"
					android:src="@drawable/back"
					android:layout_gravity="center"
					android:scaleType="centerCrop" />
			</androidx.cardview.widget.CardView>
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="100dp"
				android:text="Appointment"
				android:textSize="25sp"
				android:textColor="#FFFFFF" />
		</LinearLayout>

		<!-- Card with appointment details -->
		<androidx.cardview.widget.CardView
			android:id="@+id/cardview3"
			android:layout_marginStart="10dp"
			android:layout_marginEnd="10dp"
			android:layout_marginBottom="30dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:layout_gravity="center"
			app:cardBackgroundColor="#191919"
			android:orientation="vertical"
			app:cardElevation="10dp"
			app:cardCornerRadius="20dp">
			<LinearLayout
				android:id="@+id/linear42"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageview46"
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:layout_marginTop="8dp"
					android:layout_marginStart="8dp"
					android:src="@drawable/fitnessmall_logo"
					android:scaleType="centerCrop" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear43"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linear45"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/linear46"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal"
						android:layout_marginStart="110dp">
						<TextView
							android:id="@+id/textview3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Fitness Mall"
							android:textSize="16sp"
							android:textColor="#FFFFFF" />
						<androidx.cardview.widget.CardView
							android:id="@+id/linear47"
							android:layout_width="35dp"
							android:layout_height="20dp"
							android:padding="2dp"
							app:cardBackgroundColor="#0D0D0D"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="horizontal"
							app:cardCornerRadius="24dp">
							<ImageView
								android:id="@+id/imageview47"
								android:layout_width="15dp"
								android:layout_height="15dp"
								android:padding="2dp"
								android:layout_marginStart="3dp"
								android:layout_gravity="center_vertical|left"
								android:src="@drawable/ratings"
								android:scaleType="centerCrop" />
							<TextView
								android:id="@+id/textview4"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center_vertical|right"
								android:layout_marginEnd="7dp"
								android:text="4"
								android:textColor="#FFFFFF"
								android:textSize="12sp" />
						</androidx.cardview.widget.CardView>
					</LinearLayout>
					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:layout_marginStart="110dp"
						android:text="TRX Class, Δημήτρης K."
						android:textSize="12sp"
						android:textColor="#A4A4A4" />
					<TextView
						android:id="@+id/textview5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:layout_marginStart="110dp"
						android:text="20 atttendants capacity"
						android:textSize="12sp"
						android:textColor="#A4A4A4" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear44"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:padding="8dp">
				<androidx.cardview.widget.CardView
					android:id="@+id/cardview4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="#E53535"
					android:orientation="vertical"
					android:layout_marginStart="150dp"
					android:padding="8dp"
					app:cardBackgroundColor="#E53535"
					app:cardCornerRadius="40dp"
					app:cardElevation="10dp">
					<ImageView
						android:id="@+id/imageview48"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:padding="10dp"
						android:scaleType="centerInside"
						android:src="@drawable/kriki" />
				</androidx.cardview.widget.CardView>
				<LinearLayout
					android:id="@+id/linear48"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					android:padding="8dp"
					android:layout_marginStart="150dp">
					<TextView
						android:id="@+id/textview6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="18/20"
						android:textColor="#FFFFFF"
						android:textSize="12sp" />
					<androidx.cardview.widget.CardView
						android:id="@+id/cardview5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="#E53535"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical"
						android:padding="8dp"
						app:cardBackgroundColor="#E53535"
						app:cardCornerRadius="20dp"
						app:cardElevation="10dp">
						<ImageView
							android:id="@+id/imageview49"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:padding="4dp"
							android:scaleType="centerInside"
							android:src="@drawable/group" />
					</androidx.cardview.widget.CardView>
				</LinearLayout>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<!-- Date and Time Pickers -->
		<LinearLayout
			android:id="@+id/linear49"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="vertical">
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="June 2024"
				android:textColor="#FFFFFF"
				android:textSize="18sp"
				android:gravity="center"
				android:layout_marginBottom="8dp" />
			<CalendarView
				android:id="@+id/datepicker2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="8dp"
				android:dateTextAppearance="@style/CalendarDateStyle"
				android:weekDayTextAppearance="@style/CalendarWeekStyle"
				android:background="#191919"
				android:focusedMonthDateColor="#FFFFFF"
				android:unfocusedMonthDateColor="#A4A4A4"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp">

				<Button
					android:id="@+id/btn_time_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="8dp"
					android:background="@drawable/button_unselected"
					android:text="09:00 AM"
					android:textColor="#A4A4A4"
					android:textColorLink="#E53535"
					android:textSize="16sp" />
				<Button
					android:id="@+id/btn_time_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/button_selected"
					android:text="02:00 PM"
					android:textColor="#FFFFFF"
					android:textSize="16sp"
					android:layout_marginEnd="8dp" />

				<Button
					android:id="@+id/btn_time_3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/button_unselected"
					android:text="04:00 PM"
					android:textColor="#A4A4A4"
					android:textColorLink="#E53535"
					android:textSize="16sp" />
			</LinearLayout>

			<Button
				android:id="@+id/btn_book"
				android:layout_width="300dp"
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_marginTop="110dp"
				android:background="#E53535"
				android:padding="12dp"
				android:text="Book"
				android:textColor="#FFFFFF"
				android:textColorLink="#E53535"
				android:textSize="18sp" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
