								android:layout_height="3dp"
								android:background="#A4A4A4"
								android:orientation="horizontal"
								android:padding="8dp"
								android:translationY="-5.0dp" />

							<LinearLayout
								android:id="@+id/linear51"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:orientation="horizontal"
								android:padding="1dp">

								<LinearLayout
									android:id="@+id/linear53"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:orientation="vertical"
									android:padding="1dp">

									<TextView
										android:id="@+id/gym_tag"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginRight="50dp"
										android:padding="8dp"
										android:text="Palladion Gym"
										android:textColor="#FFFFFF"
										android:textSize="14sp" />
								</LinearLayout>

								<androidx.cardview.widget.CardView
									android:id="@+id/favoritebutton12"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginEnd="0dp"
									android:background="#00E53535"
									android:orientation="vertical"
									android:padding="4dp"
									app:cardBackgroundColor="#333333"
									app:cardCornerRadius="50dp"
									app:cardElevation="10dp">

									<ImageView
										android:id="@+id/favorite12"
										android:layout_width="35dp"
										android:layout_height="35dp"
										android:padding="8dp"
										android:scaleType="centerCrop"
										android:src="@drawable/favw" />
								</androidx.cardview.widget.CardView>
							</LinearLayout>

							<LinearLayout
								android:id="@+id/linear57"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								android:padding="2dp">

								<TextView
									android:id="@+id/price_tag_gym"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:text="from 5€/day pass"
									android:textColor="#FFFFFF"
									android:textSize="12sp" />

								<TextView
									android:id="@+id/locatio_tag"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:text="Hlioupoli, Attiki"
									android:textColor="#A4A4A4"
									android:textSize="12sp" />
							</LinearLayout>
						</LinearLayout>
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:id="@+id/cardview13"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:padding="8dp"
						app:cardBackgroundColor="#1D1D1D"
						app:cardCornerRadius="20dp"
						app:cardElevation="10dp">

						<LinearLayout
							android:id="@+id/linear59"
							android:layout_width="240dp"
							android:layout_height="wrap_content"
							android:background="#1D1D1D"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="vertical"
							android:padding="2dp">

							<ImageView
								android:id="@+id/imageview22"
								android:layout_width="150dp"
								android:layout_height="150dp"
								android:scaleType="fitCenter"
								android:src="@drawable/alterlifelogo" />

							<LinearLayout
								android:id="@+id/linear60"
								android:layout_width="match_parent"
								android:layout_height="3dp"
								android:background="#A4A4A4"
								android:orientation="horizontal"
								android:padding="8dp"
								android:translationY="-5.0dp" />

							<LinearLayout
								android:id="@+id/linear61"
								android:layout_width="wrap_content"
								android:layout_height="match_parent"
								android:orientation="horizontal"
								android:padding="1dp">

								<LinearLayout
									android:id="@+id/linear63"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:gravity="left|center_vertical"
									android:orientation="vertical"
									android:padding="1dp">

									<TextView
										android:id="@+id/textview29"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginRight="55dp"
										android:padding="8dp"
										android:text="Alterlife Argyroupoli"
										android:textColor="#FFFFFF"
										android:textSize="14sp" />
								</LinearLayout>

								<androidx.cardview.widget.CardView
									android:id="@+id/favoritebutton"
									android:layout_width="30dp"
									android:layout_height="wrap_content"
									android:layout_marginEnd="20dp"
									android:background="#00E53535"
									android:orientation="vertical"
									android:padding="4dp"
									app:cardBackgroundColor="#333333"
									app:cardCornerRadius="50dp"
									app:cardElevation="10dp">

									<ImageView
										android:id="@+id/favorite"
										android:layout_width="30dp"
										android:layout_height="30dp"
										android:padding="8dp"
										android:scaleType="centerCrop"
										android:src="@drawable/favw" />
								</androidx.cardview.widget.CardView>
							</LinearLayout>

							<LinearLayout
								android:id="@+id/linear62"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								android:padding="2dp">

								<TextView
									android:id="@+id/textview30"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:text="from 10€/day pass"
									android:textColor="#FFFFFF"
									android:textSize="12sp" />

								<TextView
									android:id="@+id/textview31"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:text="Argyroupoli, Attiki"
									android:textColor="#A4A4A4"
									android:textSize="12sp" />
							</LinearLayout>
						</LinearLayout>
					</androidx.cardview.widget.CardView>
				</LinearLayout>
			</HorizontalScrollView>

			<LinearLayout
				android:id="@+id/linear65"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/textview32"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Categories"
					android:textSize="25sp"
					android:textColor="#FFFFFF" />
			</LinearLayout>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:scrollbars="none">
			<LinearLayout
				android:id="@+id/linear66"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal">

				<androidx.cardview.widget.CardView
					android:id="@+id/cardview9"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="20dp"
					android:background="#E53535"
					android:orientation="vertical"
					android:padding="4dp"
					app:cardBackgroundColor="#E53535"
					app:cardCornerRadius="11dp"
					app:cardElevation="10dp">

					<ImageView
						android:id="@+id/imageview24"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:padding="6dp"
						android:scaleType="centerCrop"
						android:src="@drawable/star" />
				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:id="@+id/cardview11"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="20dp"
					android:background="#00E53535"
					android:orientation="vertical"
					android:padding="4dp"
					app:cardBackgroundColor="#121212"
					app:cardCornerRadius="11dp"
					app:cardElevation="10dp">

					<ImageView
						android:id="@+id/imageview28"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:padding="8dp"
						android:scaleType="centerCrop"
						android:src="@drawable/weightlifting" />
				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:id="@+id/cardview16"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="20dp"
					android:background="#00E53535"
					android:orientation="vertical"
					android:padding="4dp"
					app:cardBackgroundColor="#121212"
					app:cardCornerRadius="11dp"
					app:cardElevation="10dp">

					<ImageView
						android:id="@+id/imageview29"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:padding="8dp"
						android:scaleType="centerCrop"
						android:src="@drawable/teamwork" />
				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:id="@+id/cardview18"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="20dp"
					android:background="#00E53535"
					android:orientation="vertical"
					android:padding="4dp"
					app:cardBackgroundColor="#121212"
					app:cardCornerRadius="11dp"
					app:cardElevation="10dp">

					<ImageView
						android:id="@+id/imageview30"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:padding="8dp"
						android:scaleType="centerCrop"
						android:src="@drawable/wheelchair" />
				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:id="@+id/cardview10"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="20dp"
					android:background="#00E53535"
					android:orientation="vertical"
					android:padding="4dp"
					app:cardBackgroundColor="#121212"
					app:cardCornerRadius="11dp"
					app:cardElevation="10dp">

					<ImageView
						android:id="@+id/imageview27"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:padding="8dp"
						android:scaleType="centerCrop"
						android:src="@drawable/physiotherapy" />
				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:id="@+id/tennis12"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="#00E53535"
					android:orientation="vertical"
					android:padding="4dp"
					app:cardBackgroundColor="#121212"
					app:cardCornerRadius="11dp"
					app:cardElevation="10dp">

					<ImageView
						android:id="@+id/tennis1"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:padding="8dp"
						android:scaleType="centerCrop"
						android:src="@drawable/tennis" />
				</androidx.cardview.widget.CardView>
			</LinearLayout>
			</HorizontalScrollView>
		</LinearLayout>
	</ScrollView>

	<!-- Footer -->
	<LinearLayout
		android:id="@+id/footer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="#0D0D0D">

		<LinearLayout
			android:id="@+id/linear83"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginEnd="50dp"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/imageview35"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:scaleType="centerCrop"
				android:src="@drawable/homered" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/linear84"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginEnd="50dp"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/imageview36"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:scaleType="centerCrop"
				android:src="@drawable/calendar" />
		</LinearLayout>

