<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#0D0D0D"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical"
		android:padding="8dp">

		<LinearLayout
			android:id="@+id/linear3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="70dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:gravity="center_horizontal|center_vertical"
				android:padding="8dp"
				android:text="Welcome ðŸ‘‹"
				android:textColor="#FFFFFF"
				android:textSize="40sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/textview2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:padding="8dp"
				android:text="Sign in to your account"
				android:textColor="#ADADAD"
				android:textSize="16sp"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_marginTop="10dp">

			<TextView
				android:id="@+id/error"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:fontFamily="@font/poppins"
				android:padding="0dp"
				android:text="Please fill all the fields correctly"
				android:textColor="#CF3F3F"
				android:textSize="13sp"
				android:textStyle="bold" />
		</LinearLayout>

		<androidx.cardview.widget.CardView
			android:id="@+id/mob_text12"
			android:layout_width="320dp"
			android:layout_height="60dp"
			android:background="#121212"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			app:cardBackgroundColor="#121212"
			app:cardCornerRadius="16dp"
			app:cardElevation="4dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@android:color/transparent"
				android:gravity="start|center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/imageview1"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:scaleType="centerInside"
					android:src="@drawable/mail" />

				<EditText
					android:id="@+id/edittext2"
					style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
					android:layout_width="200dp"
					android:layout_height="60dp"
					android:hint="Email"
					android:imeOptions="actionGo"
					android:padding="8dp"
					android:textColor="#ADADAD"
					android:textColorHint="#9CA3AF"
					android:textSize="18sp" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/mob_text"
			android:layout_width="320dp"
			android:layout_height="60dp"
			android:layout_marginTop="25dp"
			android:background="#121212"
			android:gravity="left|center_vertical"
			android:orientation="horizontal"
			app:cardBackgroundColor="#121212"
			app:cardCornerRadius="16dp"
			app:cardElevation="4dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@android:color/transparent"
				android:gravity="start|center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/imageview3"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:scaleType="centerInside"
					android:src="@drawable/lock" />

				<EditText
					android:id="@+id/edittext3"
					style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
					android:layout_width="200dp"
					android:layout_height="60dp"
					android:hint="Password"
					android:imeOptions="actionGo"
					android:padding="8dp"
					android:textColor="#ADADAD"
					android:textColorHint="#9CA3AF"
					android:textSize="18sp" />

				<ImageView
					android:id="@+id/imageview4"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_marginStart="0dp"
					android:scaleType="centerInside"
					android:src="@drawable/eyeoff" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<LinearLayout
			android:id="@+id/linear5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="8dp">

			<TextView
				android:id="@+id/textview7"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:padding="8dp"
				android:text="Forgot password\?"
				android:textColor="#FFFFFF"
				android:textSize="18sp" />
		</LinearLayout>

		<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/LogInButton"
			android:layout_width="320dp"
			android:layout_height="60dp"
			android:layout_marginTop="25dp"
			android:background="#E53535"
			android:gravity="center_horizontal|center_vertical"
			android:padding="8dp"
			app:cardBackgroundColor="#E53535"
			app:cardCornerRadius="12dp"
			app:cardElevation="4dp">

			<TextView
				android:id="@+id/textview3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:padding="8dp"
				android:text="Log in"
				android:textColor="#FFFFFF"
				android:textSize="25sp" />
		</androidx.cardview.widget.CardView>

		<LinearLayout
			android:id="@+id/linear6"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="50dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:padding="8dp">

			<LinearLayout
				android:id="@+id/lineleft"
				android:layout_width="200dp"
				android:layout_height="5dp"
				android:background="#181818"
				android:orientation="horizontal"
				android:padding="8dp" />

			<TextView
				android:id="@+id/textview4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="OR"
				android:textColor="#C2C2C2"
				android:textSize="25sp"
				android:textStyle="bold" />

			<LinearLayout
				android:id="@+id/lineright"
				android:layout_width="200dp"
				android:layout_height="5dp"
				android:background="#181818"
				android:orientation="horizontal"
				android:padding="8dp" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/linear7"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/textview8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="2dp"
				android:paddingRight="4dp"
				android:paddingBottom="2dp"
				android:text="Donâ€™t have an account\?"
				android:textColor="#A4A4A4"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/textview10"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="4dp"
				android:paddingTop="2dp"
				android:paddingRight="8dp"
				android:paddingBottom="2dp"
				android:text="Register"
				android:textColor="#FFFFFF"
				android:textSize="14sp"
				android:textStyle="bold" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/linear11"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/textview11"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="2dp"
				android:paddingRight="4dp"
				android:paddingBottom="2dp"
				android:text="Do you own an athletic space\? "
				android:textColor="#A4A4A4"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/textview12"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="4dp"
				android:paddingTop="2dp"
				android:paddingRight="8dp"
				android:paddingBottom="2dp"
				android:text="Learn more here"
				android:textColor="#FFFFFF"
				android:textSize="14sp"
				android:textStyle="bold" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/linear12"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:padding="0dp">

			<TextView
				android:id="@+id/textview13"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="0dp"
				android:paddingTop="2dp"
				android:paddingRight="4dp"
				android:paddingBottom="2dp"
				android:text="Are you a personal trainer / group trainer\?"
				android:textColor="#A4A4A4"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/textview14"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="0dp"
				android:paddingTop="2dp"
				android:paddingRight="0dp"
				android:paddingBottom="2dp"
				android:text="Register here"
				android:textColor="#FFFFFF"
				android:textSize="14sp"
				android:textStyle="bold" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/linear13"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/textview15"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="4dp"
				android:paddingTop="2dp"
				android:paddingRight="4dp"
				android:paddingBottom="2dp"
				android:text="Or"
				android:textColor="#A4A4A4"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/textview16"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Register / Log in"
				android:textColor="#FFFFFF"
				android:textSize="14sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/textview17"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="4dp"
				android:paddingTop="2dp"
				android:paddingRight="4dp"
				android:paddingBottom="2dp"
				android:text="Later"
				android:textColor="#A4A4A4"
				android:textSize="14sp" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
