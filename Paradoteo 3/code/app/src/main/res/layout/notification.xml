<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#0D0D0D"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear32"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="20dp"
			android:layout_marginRight="10dp"
			android:layout_marginBottom="20dp"
			android:background="#0D0D0D"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/linear41"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:background="#0D0D0D"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/linear98"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:background="#1C1C1C"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">
					<ImageView
						android:id="@+id/imageview45"
						android:layout_width="15dp"
						android:layout_height="25dp"
						android:src="@drawable/back"
						android:scaleType="centerCrop" />
				</LinearLayout>
				<TextView
					android:id="@+id/textview33"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="140dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Notification"
					android:textSize="25sp"
					android:textColor="#FFFFFF" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear87"
			android:layout_width="match_parent"
			android:layout_height="120dp"
			android:layout_marginTop="20dp"
			android:paddingLeft="8dp"
			android:paddingTop="12dp"
			android:paddingRight="4dp"
			android:paddingBottom="12dp"
			android:background="#121212"
			android:gravity="left|center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/linear112"
				android:layout_width="70dp"
				android:layout_height="70dp"
				android:layout_marginLeft="20dp"
				android:padding="8dp"
				android:background="#1A1A1A"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageview51"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:padding="4dp"
					android:src="@drawable/offer"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear90"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="25dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview41"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:text="Mega Gym: Προλάβετε!! Έκπτωση μόνο για\nσήμερα από 18.90€ ο μήνας για 1 χρονο!\n"
					android:textSize="18sp"
					android:textColor="#FFFFFF" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear113"
			android:layout_width="match_parent"
			android:layout_height="120dp"
			android:layout_marginTop="20dp"
			android:paddingLeft="8dp"
			android:paddingTop="12dp"
			android:paddingRight="4dp"
			android:paddingBottom="12dp"
			android:background="#121212"
			android:gravity="left|center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/linear114"
				android:layout_width="70dp"
				android:layout_height="70dp"
				android:layout_marginLeft="20dp"
				android:padding="8dp"
				android:background="#1A1A1A"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageview52"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:padding="6dp"
					android:src="@drawable/promo"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear115"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="25dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview42"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:text="Planet Alimou: Σήμερα δεν θα πραγματο-\nποιηθεί το μάθημα pilates στις 18:00."
					android:textSize="18sp"
					android:textColor="#FFFFFF" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear79"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="510dp"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/linear83"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginRight="80dp"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageview35"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/home"
					android:scaleType="centerCrop" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear84"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginRight="80dp"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageview36"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/calendar"
					android:scaleType="centerCrop" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear85"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginRight="80dp"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageview37"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/location_1"
					android:scaleType="centerCrop" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear86"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageview38"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/bytesize_car"
					android:scaleType="centerCrop" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
